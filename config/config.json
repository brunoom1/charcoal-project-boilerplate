{
    "project_name": "Charcoal Boilerplate",

    "timezone": "America/Montreal",

    "dev_mode": false,

    "cache": {
        "active": true,
        "types": [ "apc", "memcache", "redis" ],
        "prefix": "boilerplate"
    },

    "logger": {
        "active": true,
        "levels": {
            "debug": true
        }
    },

    "email": {
        "default_from": {
            "email": null,
            "name": null
        }
    },

    "locales": {
        "languages": {
            "fr": {
                "locale": "fr-FR"
            },
            "en": {
                "locale": "en-US"
            }
        },
        "default_language": "fr"
    },

    "translations": {
        "paths": [
            "translations/boilerplate/",
            "vendor/locomotivemtl/charcoal-admin/translations/",
            "vendor/locomotivemtl/charcoal-app/translations/",
            "vendor/beneroch/charcoal-attachment/translations/"
        ]
    },

    "apis": {
        "google": {
            "analytics": {
                "tracking_id": ""
            }
        },
        "typekit": {
            "kit_id": ""
        }
    },

    "view": {
        "paths": [
            "views/",
            "vendor/locomotivemtl/charcoal-admin/templates/",
            "vendor/locomotivemtl/charcoal-app/templates/",
            "vendor/beneroch/charcoal-attachment/templates/"
        ],
        "default_engine": "mustache",
        "default_controller": "\\Boilerplate\\Template\\Generic"
    },

    "metadata": {
        "paths": [
            "metadata/",
            "vendor/locomotivemtl/charcoal-cms/metadata/",
            "vendor/locomotivemtl/charcoal-admin/metadata/",
            "vendor/locomotivemtl/charcoal-app/metadata/",
            "vendor/locomotivemtl/charcoal-email/metadata/",
            "vendor/locomotivemtl/charcoal-messaging/metadata/",
            "vendor/locomotivemtl/charcoal-property/metadata/",
            "vendor/locomotivemtl/charcoal-object/metadata/",
            "vendor/locomotivemtl/charcoal-user/metadata/",
            "vendor/beneroch/charcoal-attachment/metadata/"
        ]
    },

    "modules": {
        "charcoal/admin/admin": {}
    },

    "service_providers": {
        "charcoal/model/service-provider/model": {},
        "charcoal/ui/service-provider/ui": {},
        "charcoal/admin/service-provider/admin": {},
        "charcoal/translator/service-provider/translator":{},
        "boilerplate/service-provider/boilerplate": {}
    }
}
